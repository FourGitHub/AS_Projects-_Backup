<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|center"
    android:columnCount="4"
    android:rowCount="6"
    tools:context="com.example.four.recyclerviewtest.GridLayoutActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnSpan="4"
        android:layout_gravity="fill"
        android:layout_margin="1dp"
        android:maxLines="1"/>

    <Button
        android:id="@+id/one"
        android:layout_margin="1dp"
        android:layout_marginTop="2dp"
        android:text="1"
        android:textColor="#000000"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/two"
        android:layout_margin="1dp"
        android:layout_marginTop="2dp"
        android:text="2"
        android:textColor="#000000"
        android:textSize="20sp"/>
    　

    <Button
        android:id="@+id/three"
        android:layout_margin="1dp"
        android:layout_marginTop="2dp"
        android:text="3"
        android:textColor="#000000"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/devide"
        android:layout_margin="1dp"
        android:layout_marginTop="2dp"
        android:text="/"
        android:textColor="#000000"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/four"
        android:layout_margin="1dp"
        android:layout_marginTop="2dp"
        android:text="4"
        android:textColor="#000000"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/five"
        android:layout_margin="1dp"
        android:layout_marginTop="2dp"
        android:text="5"
        android:textColor="#000000"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/six"
        android:layout_margin="1dp"
        android:layout_marginTop="2dp"
        android:text="6"
        android:textColor="#000000"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/multiply"
        android:layout_margin="1dp"
        android:layout_marginTop="2dp"
        android:text="×"
        android:textColor="#000000"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/seven"
        android:layout_margin="1dp"
        android:layout_marginTop="2dp"
        android:text="7"
        android:textColor="#000000"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/eight"
        android:layout_margin="1dp"
        android:layout_marginTop="2dp"
        android:text="8"
        android:textColor="#000000"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/nine"
        android:layout_margin="1dp"
        android:layout_marginTop="2dp"
        android:text="9"
        android:textColor="#000000"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/minus"
        android:layout_margin="1dp"
        android:layout_marginTop="2dp"
        android:text="-"
        android:textColor="#000000"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/zero"
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        android:layout_margin="1dp"
        android:layout_marginTop="2dp"
        android:text="0"
        android:textColor="#000000"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/point"
        android:layout_margin="1dp"
        android:layout_marginTop="2dp"
        android:text="."
        android:textColor="#000000"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/plus"
        android:layout_gravity="fill"
        android:layout_margin="1dp"
        android:layout_marginTop="2dp"
        android:layout_rowSpan="2"
        android:text="+"
        android:textColor="#000000"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/equal"
        android:layout_columnSpan="3"
        android:layout_gravity="fill"
        android:layout_margin="1dp"
        android:layout_marginTop="2dp"
        android:text="="
        android:textColor="#000000"
        android:textSize="20sp"/>


</GridLayout>
