        android:textAllCaps="false"
        android:background="#D2691E"/>

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_2"
        android:layout_margin="20dp"/>

</FrameLayout>
