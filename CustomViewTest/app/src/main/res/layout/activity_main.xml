<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:four="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#aaff0000"
    android:orientation="vertical">

    <com.example.four.customviewtest.MyCustomView.CustomLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:four="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffff00"
        android:padding="16dp">

        <com.example.four.customviewtest.MyCustomView.CustomView
            android:id="@+id/custom_view_1"
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:layout_margin="16dp"
            android:background="@drawable/bt_shape"
            android:padding="16dp"
            four:default_size="16dp"
            four:radius_dimention="80dp"/>

        <com.example.four.customviewtest.MyCustomView.CustomView
            android:id="@+id/custom_view_2"
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:layout_margin="16dp"
            android:background="@drawable/bt_shape"
            android:padding="16dp"
            four:default_size="16dp"
            four:radius_dimention="80dp"/>

        <Button
            android:id="@+id/sign_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/bt_shape"
            android:onClick="SignIn"
            android:padding="16dp"
            android:text="SignIn"
            android:textAllCaps="false"
            android:textSize="30sp"/>

        <Button
            android:id="@+id/sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/bt_shape"
            android:onClick="SignUp"
            android:padding="16dp"
            android:text="SignUp"
            android:textAllCaps="false"
            android:textSize="30sp"/>

    </com.example.four.customviewtest.MyCustomView.CustomLayout>

</LinearLayout>