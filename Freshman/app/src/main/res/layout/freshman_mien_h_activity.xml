<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mredrock.cyxbs.freshman.UI.Activity.MienActivity">

    <View
        android:id="@+id/cyfc_padding_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/freshman_h_title_1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/freshman_h_title_1">

        <ImageView
            android:id="@+id/cyfc_title_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="6dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/freshman_h_ruxue_backup"/>

        <TextView
            android:id="@+id/fengcai_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="重邮风采"
            android:textColor="#fefeff"
            android:textSize="18sp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.TabLayout
            android:id="@+id/cyfc_tab_layout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#ffffff"
            app:tabBackground="@android:color/transparent"
            app:tabIndicatorColor="#54acff"
            app:tabIndicatorHeight="3dp">
        </android.support.design.widget.TabLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/cyfc_view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v4.view.ViewPager>

    </LinearLayout>

</LinearLayout>
