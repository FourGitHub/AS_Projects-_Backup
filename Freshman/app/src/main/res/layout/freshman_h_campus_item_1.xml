<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:background="@drawable/freshman_h_layout_corners"
    android:elevation="1dp"
    android:orientation="vertical"
    android:padding="15dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp">

        <com.mredrock.cyxbs.freshman.CustomView.CircleViewPager
            android:id="@+id/item_viewpager"
            android:layout_width="match_parent"
            android:layout_height="164dp"
            android:layout_alignParentTop="true"
            android:layout_gravity="bottom|center"
            android:clipChildren="false"/>

        <LinearLayout
            android:id="@+id/dots_layout"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:layout_gravity="bottom|center">
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="43dp">

        <TextView
            android:id="@+id/item_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:gravity="center|left"
            android:text="中心食堂"
            android:textColor="#BF000000"
            android:textSize="14sp"
            android:layout_marginBottom="7dp"/>

        <TextView
            android:id="@+id/item_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:gravity="center|left"
            android:text="1万块(人)"
            android:textColor="#ff7979"
            android:textSize="14sp"
            android:layout_marginBottom="7dp"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/item_msg_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:text="BLABLA..........."
        android:textColor="#666666"
        android:textSize="14sp"/>
</LinearLayout>
