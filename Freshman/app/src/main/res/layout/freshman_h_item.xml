<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardElevation="0dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="16dp">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
           >

            <View
                android:layout_width="1dp"
                android:layout_marginLeft="39dp"
                android:layout_height="match_parent"
                android:id="@+id/mark"/>

            <ImageView
                android:id="@+id/ruxue_item_check_igv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:padding="7dp"
                android:src="@drawable/freshman_h_ruxue_checked"/>

            <TextView
                android:id="@+id/ruxue_item_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/mark"

                android:text="录取通知书"
                android:layout_marginLeft="18dp"
                android:textColor="#333333"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/ruxue_item_more_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:padding="7dp"
                android:layout_marginRight="11dp"
                android:background="@android:color/transparent"
                android:src="@drawable/freshman_h_ruxue_down" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ruxue_item_more_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="55dp"
            android:paddingRight="26dp"
            android:layout_marginBottom="20dp">
            <TextView
                android:id="@+id/ruxue_item_dowm_more_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#666666"
                android:gravity="center_vertical"
                android:text="ffffffff"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>