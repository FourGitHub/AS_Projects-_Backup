<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.four.activitytest">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".FirstActivity"
            android:label="@string/app_name"
            android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".SecondActivity"
            android:label="Welcome to Four&apos;s second view">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <!-- <data android:path="http://www.baidu.com"/> -->
                <data android:scheme="http"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".ThirdActivity"
            android:label="Welcome to Four&apos;s third view">
            <intent-filter>
                <action android:name="com.example.activitytest.ACTION_STAR"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="com.example.activitytest.MY_CATEGORY"/>

                <data android:scheme="tel"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".FourthActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:label="Welcome to Four&apos;s fourth view">
            <intent-filter>
                <action android:name="com.example.four.singletaskactivitytest"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
    </application>

</manifest>