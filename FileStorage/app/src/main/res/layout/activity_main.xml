<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.four.filestorage.MainActivity">

   <LinearLayout
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <Button
           android:id="@+id/get_file"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="context.getFilesDir()"
           android:textAllCaps="false"
           android:textSize="16sp"
           android:gravity="center"/>

       <TextView
           android:id="@+id/show_file"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textColor="#ff19b4"
           android:layout_marginTop="3dp"
           android:layout_marginBottom="3dp"
           />

       <View
           android:layout_width="match_parent"
           android:background="#000"
           android:layout_height="2dp"
           android:layout_marginBottom="8dp"/>

   </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/get_cache"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="context.getCacheDir()"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/show_cache"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ff19b4"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            />

        <View
            android:layout_width="match_parent"
            android:background="#000"
            android:layout_height="2dp"
            android:layout_marginBottom="8dp"/>

    </LinearLayout>

</LinearLayout>
