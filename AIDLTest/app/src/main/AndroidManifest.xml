<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.four.aidltest">

    <!--允许应用程序改变网络状态-->
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE"/>

    <!--允许应用程序改变WIFI连接状态-->
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>

    <!--允许应用程序访问有关的网络信息-->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <!--允许应用程序访问WIFI网卡的网络信息-->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>

    <!--允许应用程序完全使用网络-->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="com.example.four.aidltest.custom.permission.ACCESS_BOOK_SERVICE"/>

    <permission
        android:name="com.example.four.aidltest.custom.permission.ACCESS_BOOK_SERVICE"
        android:protectionLevel="normal"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:windowSoftInputMode="adjustPan"
            android:configChanges="keyboardHidden|orientation|locale|screenLayout"
            android:resizeableActivity="false"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <service
            android:name=".BookManagerService"
            android:enabled="true"
            android:exported="false"
            android:permission="com.example.four.aidltest.custom.permission.ACCESS_BOOK_SERVICE"
            android:process=".service.remote">
        </service>

        <activity
            android:name=".SecondActivity"
            android:configChanges="orientation|screenLayout|locale|keyboardHidden"
            android:process=".secAct.remote"
            android:resizeableActivity="false"
            android:screenOrientation="portrait">
        </activity>

        <service
            android:name=".TCPServerService"
            android:enabled="true"
            android:exported="true"
            android:process=".tcp.remote">
        </service>

        <activity android:name=".TCPClientActivity">
        </activity>
    </application>

</manifest>